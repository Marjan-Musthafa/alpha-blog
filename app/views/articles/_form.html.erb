

    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-6 new_edit_form">
            <%= render  "shared/errors"%>
                    <%= form_with(model: @article, local: true) do |f| %>
                    <div class="row mb-5">
                        <%= f.label :title, class: "col-sm-2 col-form-label" %> <br>
                        <div class="col-sm-10">
                            <%= f.text_field :title,class: "form-control" %> 
                        </div>
                    </div>

                    <div class="row mb-5">
                        <%= f.label :description, class: "col-sm-2 col-form-label" %> <br>
                        <div class="col-sm-10">
                            <%= f.text_area :description,class: "form-control" %> 
                        </div>
                    </div>

            
                    <%= f.submit class: "btn btn-outline-success" %>

                    <%= link_to "Back", articles_path,class: "btn btn-outline-primary"%>

                <% end %>
            </div>
        </div>      
    </div>
