<h2 class="text-center">New User</h2>



    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-6 new_edit_form">
                    <%= form_with(scope: :session, url: login_path,local: true) do |f| %>

                    <div class="row mb-5">
                        <%= f.label :email, class: "col-sm-2 col-form-label" %> <br>
                        <div class="col-sm-10">
                            <%= f.email_field :email,class: "form-control" %> 
                        </div>
                    </div>

                    <div class="row mb-5">
                        <%= f.label :password, class: "col-sm-2 col-form-label" %> <br>
                        <div class="col-sm-10">
                            <%= f.password_field :password,class: "form-control" %> 
                        </div>
                    </div>

            
                    <%= f.submit "Login",class: "btn btn-outline-success" %>

                    <%= link_to "Back", articles_path,class: "btn btn-outline-primary"%>

                <% end %>
            </div>
        </div>      
    </div>
