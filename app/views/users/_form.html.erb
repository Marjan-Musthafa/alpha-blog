

    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-6 new_edit_form">
            <%= render  "shared/errors", obj:@user %>
                    <%= form_with(model: @user, local: true) do |f| %>
                    <div class="row mb-5">
                        <%= f.label :username, class: "col-sm-2 col-form-label" %> <br>
                        <div class="col-sm-10">
                            <%= f.text_field :username,class: "form-control" %> 
                        </div>
                    </div>

                    <div class="row mb-5">
                        <%= f.label :email, class: "col-sm-2 col-form-label" %> <br>
                        <div class="col-sm-10">
                            <%= f.email_field :email,class: "form-control" %> 
                        </div>
                    </div>

                    <div class="row mb-5">
                        <%= f.label :password, class: "col-sm-2 col-form-label" %> <br>
                        <div class="col-sm-10">
                            <%= f.password_field :password,class: "form-control" %> 
                        </div>
                    </div>

            
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Edit",class: "btn btn-outline-success") %>

                    <%= link_to "Back", articles_path,class: "btn btn-outline-primary"%>

                <% end %>
            </div>
        </div>      
    </div>
